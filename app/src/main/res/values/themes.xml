<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.EduPayApp" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.EduPayApp.Splash" parent="Theme.SplashScreen">
        <!-- Splash background color -->
        <item name="windowSplashScreenBackground">#FFFFFF</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/splash3</item>

        <item name="windowSplashScreenAnimationDuration">2000</item>
        <!-- Main app theme after splash -->
        <item name="postSplashScreenTheme">@style/Theme.EduPayApp</item>
    </style>

</resources>
